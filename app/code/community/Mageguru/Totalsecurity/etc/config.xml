<?xml version="1.0"?>
<config>
    <modules>
        <Mageguru_Totalsecurity>
            <version>1.0.0</version>
        </Mageguru_Totalsecurity>
    </modules>
    <frontend>
        <routers>
            
            <totalsecurity>
                <use>standard</use>
                <args>
                    <module>Mageguru_Totalsecurity</module>
                    <frontName>totalsecurity-authentication</frontName>
                </args>
            </totalsecurity>
        </routers>
        <layout>
            <updates>
                <totalsecurity>
                    <file>mageguru/totalsecurity/totalsecurity.xml</file>
                </totalsecurity>
            </updates>
        </layout>
    </frontend>
	<admin>
	 <routers>
	  <totalsecurity>
	   <use>admin</use>
	    <args>
	     <module>Mageguru_Totalsecurity</module>
	      <frontName>totalsecurity-authentication</frontName>
	     </args>
	   </totalsecurity>
	<adminhtml>
	<args>
	<modules>
	<Mageguru_Totalsecurity_Adminhtml before="Mage_Adminhtml">Mageguru_Totalsecurity_Adminhtml</Mageguru_Totalsecurity_Adminhtml>
	</modules>
	</args>
	</adminhtml>
	</routers>
	</admin>
	<adminhtml>
	<acl>
	<resources>
	<all>
	<title>Allow Everything</title>
	</all>
	<admin>
	<children>
	<Mageguru_Totalsecurity>
	<title>Totalsecurity Module</title>
	<sort_order>10</sort_order>
	</Mageguru_Totalsecurity>
	</children>
	</admin>
	</resources>
	</acl>
	<layout>
	<updates>
	<totalsecurity>
	<file>mageguru/totalsecurity/totalsecurityadmin.xml</file>
	</totalsecurity>
	</updates>
	</layout>
	</adminhtml>
    <global>
        <models>
            <totalsecurity>
                <class>Mageguru_Totalsecurity_Model</class>
                <resourceModel>totalsecurity_mysql4</resourceModel>
            </totalsecurity>
            <adminhtml>
                <rewrite>
                    <session>Mageguru_Totalsecurity_Model_Adminhtml_Session</session>
                </rewrite>
            </adminhtml>
            <customer>
                <rewrite>
                    <session>Mageguru_Totalsecurity_Model_Session</session>
                </rewrite>
            </customer>
        </models>
        <blocks>
            <totalsecurity>
                <class>Mageguru_Totalsecurity_Block</class>
            </totalsecurity>
            <adminhtml>
                
            </adminhtml>
        </blocks>
        <helpers>
            <totalsecurity>
                <class>Mageguru_Totalsecurity_Helper</class>
            </totalsecurity>
        </helpers>
        <resources>
           
        </resources>
    </global>
	<default>
		<totalsecurity>
			<settings>
				<is_enabled>0</is_enabled>
                <use_admin>1</use_admin>
                <use_customer>1</use_customer>
               <email_to_super>super@123</email_to_super>
                <admin_path>admin</admin_path>
               
                <admin_method>email</admin_method>
			</settings>
			<link_options>
				<show_footerlink>1</show_footerlink>
				<show_toplink>1</show_toplink>
			</link_options>
		</totalsecurity>
	</default>
</config>
